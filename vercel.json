{
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "web/dist" }
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" },
    { "source": "/download/(.*)", "destination": "/api/index.py" },
    { "source": "/assets/(.*)", "destination": "/web/dist/assets/$1" },
    { "source": "/(.*\\.(?:js|css|png|jpg|jpeg|svg|ico|json|txt))", "destination": "/web/dist/$1" },
    { "source": "/(.*)", "destination": "/web/dist/index.html" }
  ]
}